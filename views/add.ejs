<%- include("partials/header.ejs") %>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">My Tracker</a>

    <form class="d-flex ms-auto" role="search" method="GET" action="/add">
      <input
        id="searchInput"
        class="form-control me-2"
        type="search"
        name="q"
        placeholder="Search for a series or anime..."
        aria-label="Search"
        required
      />
      <button class="btn btn-outline-light" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="container mt-4">
  <h2 class="text-center mb-4">
    Suggestions for "<%= results.length > 0 ? results[0].title : 'your search'
    %>"
  </h2>

  <% if (results.length === 0) { %>
  <p class="text-center text-muted">No results found. Try another search!</p>
  <% } else { %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% results.forEach(result => { %>
    <div class="col">
      <div class="card h-100 shadow-sm border-0 hover-card">
        <img
          src="<%= result.image %>"
          class="card-img-top"
          alt="<%= result.title %>"
          style="height: 300px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title text-truncate"><%= result.title %></h5>
            <p class="card-text text-muted mb-1">
              <strong>Type:</strong> <%= result.type %>
            </p>
            <p class="card-text mb-1">
              <strong>‚≠ê Rating:</strong> <%= result.rating %>
            </p>
            <p class="card-text">
              <strong>üìÖ Year:</strong> <%= result.year %>
            </p>
          </div>
          <form action="/add" method="POST" class="mt-3 text-center">
            <input type="hidden" name="title" value="<%= result.title %>" />
            <input type="hidden" name="cover_url" value="<%= result.image %>" />
            <input type="hidden" name="type" value="<%= result.type %>" />
            <button class="btn btn-success w-100 btn-sm">
              Add to My Tracker
            </button>
          </form>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>

<style>
  .hover-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 12px;
    overflow: hidden;
  }

  .hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
  }

  .card-text {
    font-size: 0.9rem;
  }

  button.btn-success {
    border-radius: 8px;
  }
</style>

<%- include("partials/footer.ejs") %>
